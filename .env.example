# Rate Limiting Configuration
# Adjust these values based on your deployment needs

# API rate limit (requests per second)
API_RATE_LIMIT=10r/s

# API burst limit
API_BURST_LIMIT=20

# Forge rate limit (requests per minute)
# Set to 1r/m for production, increase for testing
FORGE_RATE_LIMIT=1r/m

# Forge burst limit
FORGE_BURST_LIMIT=5

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://www.excaliburcrypto.com,https://excaliburcrypto.com

# Environment (production or development)
ENV=production

# Domain
DOMAIN=www.excaliburcrypto.com
