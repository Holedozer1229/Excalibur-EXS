  "difficulty_adjustment": {
    "algorithm": "adaptive_real_time",
    "version": "EXS-DAA-v2",
    "description": "Addresses Bitcoin's difficulty lag and manipulation vulnerabilities",
    
    "parameters": {
      "target_forge_time": 600,
      "target_forge_time_seconds": 600,
      "adjustment_window": 144,
      "adjustment_window_description": "144 forges (~24 hours at target rate)",
      "min_adjustment_factor": 0.5,
      "max_adjustment_factor": 2.0,
      "emergency_adjustment_threshold": 0.25
    },
    
    "improvements_over_bitcoin": [
      {
        "problem": "BTC adjusts every 2016 blocks (~2 weeks)",
        "solution": "Adjust every 144 forges (~24 hours)",
        "benefit": "Faster response to hashrate changes"
      },
      {
        "problem": "BTC vulnerable to timestamp manipulation",
        "solution": "Use median of last 11 forge timestamps with outlier rejection",
        "benefit": "Prevents difficulty manipulation attacks"
      },
      {
        "problem": "BTC can have extreme difficulty swings with new ASICs",
        "solution": "Damping factor limits adjustment to ±50% per period",
        "benefit": "Smoother difficulty progression"
      },
      {
        "problem": "BTC miners can game difficulty by withholding blocks",
        "solution": "Exponential moving average over multiple windows",
        "benefit": "Reduces gaming incentives"
      },
      {
        "problem": "BTC emergency adjustment takes weeks",
        "solution": "Emergency mode activates if 25% off target for 6 hours",
        "benefit": "Network remains functional during attacks"
      }
    ],
    
    "formula": {
      "basic": "new_difficulty = old_difficulty * (actual_time / target_time)",
      "damped": "new_difficulty = old_difficulty * min(max(actual_time / target_time, 0.5), 2.0)",
      "smoothed": "new_difficulty = EMA(damped_difficulty, alpha=0.7)",
      "emergency": "if (actual_time > 4 * target_time): new_difficulty *= 0.5"
    },
    
    "real_time_adjustment": {
      "enabled": true,
      "description": "Continuous difficulty recalculation every forge",
      "window_type": "exponential_moving_average",
      "alpha": 0.1,
      "benefit": "Eliminates difficulty lag entirely"
    },
    
    "anti_manipulation": {
      "timestamp_validation": {
        "max_future_drift": 7200,
        "median_window": 11,
        "outlier_rejection": true,
        "description": "Prevents timestamp gaming attacks"
      },
      "hashrate_spike_detection": {
        "enabled": true,
        "threshold": 3.0,
        "action": "accelerated_adjustment",
        "description": "Detects and responds to sudden hashrate increases"
      },
      "difficulty_bomb_prevention": {
        "enabled": true,
        "description": "No artificial difficulty increases like Ethereum's Ice Age"
      }
    }
  },
  
