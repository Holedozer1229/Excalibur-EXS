/* Merlin's Portal - Admin Dashboard Styles */

:root {
    --royal-purple: #4a148c;
    --gold: #ffd700;
    --steel-blue: #4682b4;
    --dark-bg: #1a1a2e;
    --card-bg: #16213e;
    --text-light: #e0e0e0;
    --accent-green: #00ff88;
    --accent-red: #ff4444;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: linear-gradient(135deg, var(--dark-bg) 0%, #0f3460 100%);
    color: var(--text-light);
    min-height: 100vh;
}

.portal-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 20px;
}

.portal-header {
    text-align: center;
    padding: 30px 0;
    border-bottom: 2px solid var(--gold);
    margin-bottom: 30px;
}

.portal-header h1 {
    font-size: 3em;
    color: var(--gold);
    text-shadow: 0 0 20px rgba(255, 215, 0, 0.5);
}

.subtitle {
    font-size: 1.2em;
    color: var(--steel-blue);
    font-style: italic;
}

.portal-nav {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-bottom: 30px;
}

.nav-btn {
    background: var(--card-bg);
    border: 2px solid var(--steel-blue);
    color: var(--text-light);
    padding: 15px 30px;
    font-size: 1.1em;
    cursor: pointer;
    border-radius: 10px;
    transition: all 0.3s;
}

.nav-btn:hover {
    background: var(--steel-blue);
    transform: translateY(-2px);
}

.nav-btn.active {
    background: var(--royal-purple);
    border-color: var(--gold);
}

.portal-main {
    min-height: 600px;
}

.panel {
    display: none;
    animation: fadeIn 0.5s;
}

.panel.active {
    display: block;
}

@keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
}

.panel h2 {
    color: var(--gold);
    font-size: 2em;
    margin-bottom: 20px;
    text-align: center;
}

/* Treasury Panel */
.stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
    margin-bottom: 30px;
}

.stat-card {
    background: var(--card-bg);
    padding: 25px;
    border-radius: 15px;
    border: 2px solid var(--steel-blue);
    text-align: center;
    transition: transform 0.3s;
}

.stat-card:hover {
    transform: translateY(-5px);
    border-color: var(--gold);
}

.stat-card h3 {
    color: var(--steel-blue);
    font-size: 1em;
    margin-bottom: 10px;
}

.stat-value {
    font-size: 2.5em;
    font-weight: bold;
    color: var(--accent-green);
    margin: 10px 0;
}

.stat-unit {
    color: var(--text-light);
    font-size: 1.1em;
}

.treasury-chart {
    background: var(--card-bg);
    padding: 30px;
    border-radius: 15px;
    border: 2px solid var(--steel-blue);
}

.treasury-chart h3 {
    color: var(--gold);
    margin-bottom: 20px;
}

#treasury-chart {
    width: 100%;
    height: 300px;
}

/* Difficulty Panel */
.difficulty-control {
    background: var(--card-bg);
    padding: 40px;
    border-radius: 15px;
    border: 2px solid var(--steel-blue);
}

.current-difficulty {
    text-align: center;
    margin-bottom: 30px;
}

.current-difficulty h3 {
    color: var(--steel-blue);
    margin-bottom: 15px;
}

.difficulty-value {
    font-size: 5em;
    font-weight: bold;
    color: var(--gold);
    text-shadow: 0 0 20px rgba(255, 215, 0, 0.5);
}

.adjustment-controls {
    margin-bottom: 30px;
    text-align: center;
}

.adjustment-controls label {
    display: block;
    font-size: 1.2em;
    margin-bottom: 15px;
    color: var(--text-light);
}

#difficulty-slider {
    width: 80%;
    height: 10px;
    margin: 20px 0;
    cursor: pointer;
}

#difficulty-display {
    display: inline-block;
    font-size: 2em;
    font-weight: bold;
    color: var(--accent-green);
    margin: 0 20px;
}

.action-btn {
    background: var(--royal-purple);
    border: 2px solid var(--gold);
    color: var(--text-light);
    padding: 15px 40px;
    font-size: 1.1em;
    cursor: pointer;
    border-radius: 10px;
    margin-top: 20px;
    transition: all 0.3s;
}

.action-btn:hover {
    background: var(--gold);
    color: var(--dark-bg);
    transform: scale(1.05);
}

.difficulty-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    margin-top: 30px;
}

.stat-item {
    display: flex;
    justify-content: space-between;
    padding: 15px;
    background: rgba(70, 130, 180, 0.2);
    border-radius: 8px;
}

/* Anomaly Map Panel */
.map-controls {
    display: flex;
    justify-content: center;
    gap: 15px;
    margin-bottom: 20px;
}

.filter-btn {
    background: var(--card-bg);
    border: 2px solid var(--steel-blue);
    color: var(--text-light);
    padding: 10px 25px;
    cursor: pointer;
    border-radius: 8px;
    transition: all 0.3s;
}

.filter-btn:hover {
    background: var(--steel-blue);
}

.filter-btn.active {
    background: var(--accent-green);
    color: var(--dark-bg);
    border-color: var(--accent-green);
}

.anomaly-map {
    background: var(--card-bg);
    padding: 20px;
    border-radius: 15px;
    border: 2px solid var(--steel-blue);
    margin-bottom: 30px;
}

#anomaly-canvas {
    width: 100%;
    height: 400px;
    background: rgba(0, 0, 0, 0.3);
    border-radius: 10px;
}

.forge-list {
    background: var(--card-bg);
    padding: 30px;
    border-radius: 15px;
    border: 2px solid var(--steel-blue);
}

.forge-list h3 {
    color: var(--gold);
    margin-bottom: 20px;
}

#forge-activity-list {
    list-style: none;
}

.forge-item {
    display: flex;
    align-items: center;
    padding: 15px;
    margin-bottom: 10px;
    background: rgba(70, 130, 180, 0.1);
    border-radius: 8px;
    border-left: 4px solid var(--accent-green);
}

.forge-status {
    font-size: 1.5em;
    margin-right: 15px;
}

.forge-status.active {
    color: var(--accent-green);
    animation: pulse 2s infinite;
}

@keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
}

.forge-id {
    flex: 1;
    font-weight: bold;
}

.forge-time {
    color: var(--steel-blue);
}

.portal-footer {
    margin-top: 50px;
    padding: 20px;
    text-align: center;
    border-top: 2px solid var(--gold);
    color: var(--steel-blue);
}
