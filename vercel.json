{
  "version": 2,
  "name": "excalibur-exs",
  "builds": [
    {
      "src": "web/forge-ui/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "website/**",
      "use": "@vercel/static"
    },
    {
      "src": "admin/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/forge/(.*)",
      "dest": "/web/forge-ui/$1"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/admin/$1"
    },
    {
      "src": "/",
      "dest": "/web/forge-ui"
    },
    {
      "src": "/(.*)",
      "dest": "/web/forge-ui/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains"
        },
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "env": {
    "DOMAIN": "www.excaliburcrypto.com"
  }
}
